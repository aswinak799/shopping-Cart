<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
         <table class="table mt-3">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th >Address</th>
      <th >Pincode</th>
      <th >Mobile</th>
      <th scope="col">Amount</th>
      <th scope="col">Payment</th>
      <th>status</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr>
      <td>{{this.date}}</td>
      <td>{{this.deliveryDetails.address}}</td>
      <td>{{this.deliveryDetails.pincode}}</td>
      <td>{{this.deliveryDetails.Mobile}}</td>
      <td>{{this.totalAmount}}</td>
      <td>{{this.paymentMethord}}</td>
      <td>{{this.status}}</td>

      <td>
        <a href="/view-order-product/{{this._id}}" class="btn btn-primary ml-auto">View Products</a>
      </td>
     
    </tr>
   
    {{/each}}
    
  </tbody>
</table>

    </div>
</section>