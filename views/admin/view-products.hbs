<section>
    <div class="container">

        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-3"  >Add product</a>
        </div>
<div class="mt-3">
        <table class="table mt-5" id="productstable">
  <thead>
    <tr>
      
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      
      <td>{{this.Name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" alt="" width="50px" height="50px"> </td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-info" onclick="return confirm('Are you want to edit {{this.Name}} ?')">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
          
      </td>
    </tr>
   
    {{/each}}
    
  </tbody>
</table>
</div>
    </div>
     
</section>
<script>
  $(document).ready( function () {
    $('#productstable').DataTable();
} );
</script>