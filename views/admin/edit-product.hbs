<section>
  <h2 class="text-center mt-2">Edit product</h2>
    <div class="container">
        <div class="row">
          
            <div class="col-md-7 m-auto ">
<form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="pname"  name="Name" placeholder="Enter Name" value="{{product.Name}}">
    
  </div>
   <div class="form-group">
    <label for="category">price</label>
    <input type="number" class="form-control" id="ppice"name="price" placeholder="price" value="{{product.price}}" >
  </div>
  <div class="form-group">
    <label for="category">category</label>
    <input type="text" class="form-control" id="pcate"name="category" placeholder="category" value="{{product.category}}" >
  </div>

  <div class="form-group">
    <label for="description">description</label>
    <input type="text" class="form-control" id="pdes"name="description" placeholder="description" value="{{product.description}}">
  </div>
   <div class="form-group">
    <label for="exampleFormControlFile1">image</label>
    <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px; height:auto;" id="imgview" class="pl-3">
    <input type="file" class="form-control-file pt-2" id="exampleFormControlFile1" name="image" onchange="viewImg(event)">
  </div>
  
  <button type="submit" class="btn btn-success">Submit</button>
</form>
</div>
</div>
</div>
</section>

<script>
    function viewImg(event){
        document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0])
    }
</script>